        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Template for Windows" Height="850" Width="1000">
    <Grid>
        <Image x:Name="CameraImage" Width="960" Height="540"/>
        <Canvas x:Name="SkeletonCanvas" Width="960" Height="540" />
        <CheckBox Content="Show Bodies" FontSize="20" HorizontalAlignment="Left" Margin="28,721,0,0" VerticalAlignment="Top" Height="48" Width="148" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <CheckBox Content="Show Faces" FontSize="20" HorizontalAlignment="Left" Margin="206,721,0,0" VerticalAlignment="Top" Height="48" Width="143" Checked="faceBox_Checked" Unchecked="faceBox_Unchecked"/>

    </Grid>
</Window>
